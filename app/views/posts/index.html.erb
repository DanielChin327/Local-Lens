<!-- app/views/posts/index.html.erb -->

<h1>Posts</h1>
<% @posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, post %></h2>
    <p><%= post.body %></p>
    <% post.images.each do |image| %>
      <%= image_tag(image) %>
    <% end %>
  </div>
<% end %>

<div class="container">
  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post %></h5>
        <p class="card-text"><%= truncate(post.body, length: 100) %></p>
      </div>
    </div>
  <% end %>
</div>
