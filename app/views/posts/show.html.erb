<!-- app/views/posts/show.html.erb -->
<div class="container">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @post.title %></h1>
      <p class="card-text"><%= @post.body %></p>
      <% @post.images.each do |image| %>
        <%= image_tag(image, class: "img-fluid") %>
      <% end %>
    </div>
  </div>
</div>
