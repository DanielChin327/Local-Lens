<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>
<div class="container mt-5">
  <h1>Login</h1>
  <%= form_with scope: :session, url: session_path, local: true, class: 'needs-validation', novalidate: true do |form| %>
    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <div class="mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control', autofocus: true, required: true %>
      <div class="invalid-feedback">
        Please enter your email.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: 'form-label' %>
      <%= form.password_field :password, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        Please enter your password.
      </div>
    </div>

    <div class="actions">
      <%= form.submit "Login", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
